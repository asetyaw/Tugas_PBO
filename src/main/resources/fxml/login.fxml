<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.perpus.controller.LoginController"
            prefWidth="400" prefHeight="250">
    
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="30" prefWidth="300" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="30">
            <Label text="Login Admin" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button text="Login" onAction="#handleLogin" />
            <Label fx:id="statusLabel" textFill="red" />
        </VBox>
    </children>
</AnchorPane>
